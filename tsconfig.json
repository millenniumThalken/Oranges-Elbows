{
    "compileOnSave": false,
    "include": [ //added this for a bootstrap carousel
        "node_modules/angular-bootstrap-md/**/*.ts",
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    }
}